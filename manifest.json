{
    "manifest_version": 3,
    "name": "PIE++",
    "version": "0.1",
    "description": "Adds some much-needed QOL features to PIE",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.pie.iu.edu/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.pie.iu.edu/*"],
            "js": ["contentScripts/contentScript.js"]
        },
        {
            "matches": ["https://*.pie.iu.edu/InventoryReports*"],
            "js": ["contentScripts/inventoryReports.js"]
        }
    ],
    "action": {
        "default_title": "PIE++",
        "default_popup": "popup.html"
    }
}